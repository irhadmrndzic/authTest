@model ExternalLoginConfirmationViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="ui raised verry padded text container">
    <h2 class="ui header centered">@ViewData["Title"]</h2>

    <h3 class="ui sub centered header">Associate your @ViewData["LoginProvider"] account</h3>

    <form asp-controller="Main" asp-action="ExternalLoginConfirmation" method="post" role="form" class="ui  small form validate-me">
        <div class="ui stacked segment">
            <p class="content ">
                You have successfully authenticated with <strong>@ViewData["LoginProvider"].</strong><br />
                Please enter a user name for this site below and click the Register button to finish
                logging in.
            </p>
            <div class=" wide field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Email" placeholder="Email address" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <br />
            <input type="submit" class="ui large blue submit button" value="Register" />
            <div asp-validation-summary="All"></div>
        </div>
    </form>
</div>