<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*
    <title>@ViewBag.Title</title>*@
    <title>@ViewData["Title"]</title>
    <environment names="Development">
        <link href="~/lib/semantic/dist/semantic.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/semantic/dist/semantic.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>

    @*<div>
        @DateTime.Today.Year
    </div>*@

    @*prvi parametar ime, drugi required*@
    @*<header> @RenderSection("header", false)  </header>*@
    @*<div>
        @RenderBody()
    </div>*@

    @*naming konvencija, zanemaruje viewComponent a
    uzima samo prvi dio, u ovom slucaju First*@
    @*<footer>
        <p>My footer</p>
        <p>@await Component.InvokeAsync("First")</p>
    </footer>*@



    <!--Sidebar-->
    <div class="ui visible inverted left vertical sidebar menu">
        <a class="item" asp-controller="LoggedIn" asp-action="Index"> <i class="home icon "></i> Home Page</a>
    </div>
    <!--Fixed NavBar-->
    <div class="ui top horizontal fixed menu ">
        <div class="right menu" style="margin-right:270px;">


            @*<div class="item"> <i class="user icon "></i>@ViewData["User"]</div>*@

           

            @await Component.InvokeAsync("Hello")
            <a class="item" asp-controller="Main" asp-action="Logout">Logout <i class="logout icon" style="padding-left:14px;"></i></a>
        </div>

    </div>
    <br />

    <!--Content from cshtml pages-->
    <div class="pusher">
        <p style="margin-top:60px;">

        </p>
        @RenderBody()
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/semantic/dist/semantic.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js"></script>
        <script type="text/javascript">$(document).ready(function () { $(".rating").rating(); });</script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/semantic/dist/semantic.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/js/site.js"></script>
        <script type="text/javascript">$(document).ready(function () { $(".rating").rating(); });</script>
    </environment>

</body>
</html>