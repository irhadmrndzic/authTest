    @*<title>@ViewBag.Title</title>*@
    <title>@ViewData["Title"] - Aplikacija</title>
    <environment names="Development">
        <link href="~/lib/semantic/dist/semantic.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/semantic/dist/semantic.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>

    @*<div>
            @DateTime.Today.Year
        </div>*@

    @*prvi parametar ime, drugi required*@
    @*<header> @RenderSection("header", false)  </header>*@
    @*<div>
            @RenderBody()
        </div>*@

    @*naming konvencija, zanemaruje viewComponent a
